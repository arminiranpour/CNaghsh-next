{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@acme/ui": ["../../packages/ui/src/index.ts"],
      "@acme/ui/*": ["../../packages/ui/src/*"]
    },
    "types": ["node", "react", "react-dom"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "types/**/*.d.ts",
    ".next/types/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
