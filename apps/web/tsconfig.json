{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@acme/ui": ["../../packages/ui/src/index.ts"],
      "@acme/ui/*": ["../../packages/ui/src/*"]
    },
    "typeRoots": ["./types", "../../node_modules/@types"],
    "types": ["node", "react", "react-dom"]
